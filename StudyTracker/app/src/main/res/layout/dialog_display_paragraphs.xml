<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="5dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:text="Section"
        android:visibility="gone"
        android:background="@color/primary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="10"
        android:padding="@dimen/dp_8"
        android:background="@color/primary">

        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="page"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_weight="5"/>

        <ImageView
            android:id="@+id/imgReadStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/read_selector"
            android:layout_weight="1"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/imgNotesStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/notes_selector"
            android:layout_weight="1"
            android:layout_margin="1dp"/>

        <ImageView
            android:id="@+id/imgMemorizeStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/memorized_selector"
            android:layout_weight="1"
            android:layout_margin="1dp"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgReviewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/review_selector"
                android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/reviewCount"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/counter_badge"
                android:layout_gravity="top|right"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="8sp"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgPracticeStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/practice_selector"
                android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/practiceCount"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/counter_badge"
                android:layout_gravity="top|right"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="8sp"
                android:visibility="gone"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/para1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="N/A"/>

        <TextView
            android:id="@+id/para2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="N/A"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/para3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="N/A"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/para4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:text="N/A"/>

        <TextView
            android:id="@+id/para5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:text="N/A"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>


</LinearLayout>