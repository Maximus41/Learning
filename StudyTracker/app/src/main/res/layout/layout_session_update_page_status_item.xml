<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="10"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/pageTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="page"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="5"/>

            <ImageButton
                android:id="@+id/readStatusUpdateBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/read_selector"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_margin="1dp"/>

            <ImageButton
                android:id="@+id/notesTakenUpdateBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/notes_selector"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_margin="1dp"/>

            <ImageButton
                android:id="@+id/memorizedNoteUpdateBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/memorized_selector"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_margin="1dp"/>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/reviewButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/review_selector"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:layout_margin="1dp"/>

                <TextView
                    android:id="@+id/reviewCount"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/counter_badge"
                    android:layout_gravity="top|right"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/practiceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/practice_selector"
                    android:background="@android:color/transparent"
                    android:layout_margin="1dp"/>

                <TextView
                    android:id="@+id/practiceCount"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/counter_badge"
                    android:layout_gravity="top|right"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:textSize="8sp"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"/>

            </FrameLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>